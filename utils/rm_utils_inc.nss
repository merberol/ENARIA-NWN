//Retrieve current seconds in unix time
int GetUnixTimeStamp();

int GetUnixTimeStamp()
{

    string sQuery = "SELECT strftime('%s', 'now')";

    sqlquery sql = SqlPrepareQueryObject(GetModule(), sQuery);

    SqlStep(sql);



    return SqlGetInt(sql, 0);

}
